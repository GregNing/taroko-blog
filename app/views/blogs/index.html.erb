<p style="color: green"><%= notice %></p>

<div class="col-md-12">
  <h1>Blogs</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>標題</th>
        <th>內容</th>
        <th>作者</th>
        <th>發表時間</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @blogs.each do |blog| %>
        <%= render blog %>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'New Blog', new_blog_path %>
