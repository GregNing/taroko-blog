<div class="card">
  <p style="color: green"><%= notice %></p>
  <div class="card-header">
    <%= "Author: #{@blog.author}" %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @blog.title %></h5>
    <p class="card-text">
      <%= @blog.content %>
    </p>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
      <%= link_to "Edit this blog", edit_blog_path(@blog), class: 'btn btn-outline-primary' %>
      <%= link_to "Back to blogs", blogs_path, class: 'btn btn-outline-primary' %>&nbsp;
      <%= button_to "Destroy this blog", @blog, class: 'btn btn-danger', method: :delete,  form: { data: { turbo_confirm: 'Are you sure?' }} %>
    </div>
  </div>
</div>
